                                     <img src="{{@site.logo}}" alt="{{@site.title}}">
                        </div>
                        <!-- End Logo -->
                  
                        <!-- Navigation -->
                        {{"navigation"}}
                        <!-- End Navigation -->

                        <!-- Font Controller -->
                        <div class="fontcontroller">
